<h1>Tasks</h1>
<%= link_to "Add new task", new_task_path %>
<% @tasks.each do |task| %>
  <div>
    <%= check_box_tag '', '', task.completed %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", task_path(task),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
      class: "text-danger" %>
  </div>
<% end %>
